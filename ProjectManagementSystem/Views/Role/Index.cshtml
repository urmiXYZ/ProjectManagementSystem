@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole<int>>

@{
    ViewData["Title"] = "Roles";
}

<h2>Roles</h2>

<div class="mb-3">
    <input type="text" id="roleName" class="form-control d-inline-block w-auto" placeholder="New role name" />
    <button class="btn btn-primary" id="btnAddRole">Add Role</button>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Role Id</th>
            <th>Role Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#btnAddRole").click(function () {
                var roleName = $("#roleName").val().trim();
                if (!roleName) return;

                $.post('/Role/Create', { roleName: roleName }, function (res) {
                    if (res.success) {
                        location.reload();
                    } 
                });
            });
        });
    </script>
}
